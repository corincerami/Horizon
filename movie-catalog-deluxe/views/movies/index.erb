<form action='/movies' method='get'>
  <input type='text' name='query'>
  <input type='submit' value='Search'>
</form>

<p>
  Sort by: <a href='/movies?order=rating'>rating</a> |
           <a href='movies?order=year'>year</a> |
           <a href='movies?order=title'>title</a>
</p>

<!-- pages -->
<% @page ||= 1 %>
<% if @page < @last_page %>
  <a href='/movies?page=<%= "#{@page.to_i + 1}" %>&order=<%="#{@sort_choice}"%>'>Next Page</a>
<% end %>
<% if @page > 1 %>
  <a href='/movies?page=<%= "#{@page.to_i - 1}" %>&order=<%="#{@sort_choice}"%>'>Previous Page</a>
<% end %>

<ul>
  <% @movies.each do |movie| %>
  <% title = movie["title"] %>
  <% id = movie["id"] %>
    <li>
      <%= "<a href='/movies/#{id}'>#{title}</a>" %>
    </li>
  <% end %>
</ul>
