<% if @car.errors.any? %>
  <% @car.errors.full_messages.each do |msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>


<%= form_for [@manufacturer, @car] do |f| %>
  <%= f.label :color %>
  <%= f.text_field :color %>

  <%= f.label :year %>
  <%= f.select(:year, @years, include_blank: true) %>

  <%= f.label :mileage %>
  <%= f.text_field :mileage %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>
